<!DOCTYPE html>
<html>
<head>
    <title>Vedi Annunci</title>
</head>
<body>
    <h1>Annunci Disponibili</h1>
    <% if (announcements && announcements.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Societ√†</th>
                    <th>Prezzo Acquisto</th>
                    <th>Valore Attuale</th>
                    <th>Prezzo Vendita</th>
                </tr>
            </thead>
            <tbody>
                <% announcements.forEach(a => { %>
                    <tr>
                        <td><%= a.societa %></td>
                        <td><%= a.prezzoAcquisto %></td>
                        <td><%= a.valoreAttuale %></td>
                        <td><%= a.prezzoVendita %></td>
